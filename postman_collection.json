{
  "info": {
    "name": "todo-api demo",
    "_postman_id": "b8c5df46-8e5e-4e2b-9f7a-11e8f7a1f0aa",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login (set token)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.environment.set('userToken', json.accessToken);"
            ]
          }
        }
      ]
    },
    {
      "name": "Projects - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{userToken}}" }
        ],
        "url": "{{baseUrl}}/projects",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"My Project\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.environment.set('projectId', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Tasks - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{userToken}}" }
        ],
        "url": "{{baseUrl}}/tasks",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"projectId\": \"{{projectId}}\",\n  \"title\": \"First task\",\n  \"description\": \"Demo\",\n  \"priority\": 1,\n  \"dueAt\": \"2026-12-31T23:59:59Z\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.environment.set('taskId', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Tasks - List (filters)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
        "url": "{{baseUrl}}/projects/{{projectId}}/tasks?status=TODO,IN_PROGRESS&priority=1,2&dueFrom=2026-01-01T00:00:00Z&dueTo=2026-12-31T23:59:59Z&q=demo&page=0&size=10&sort=createdAt,desc"
      }
    },
    {
      "name": "Tasks - Get by id",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
        "url": "{{baseUrl}}/tasks/{{taskId}}"
      }
    },
    {
      "name": "Tasks - Update status",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{userToken}}" }
        ],
        "url": "{{baseUrl}}/tasks/{{taskId}}/status",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"IN_PROGRESS\"\n}"
        }
      }
    },
    {
      "name": "Auth - No token -> 401",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/projects/{{projectId}}/tasks"
      }
    },
    {
      "name": "Admin - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.environment.set('adminId', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Admin - Login (set admin token)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.environment.set('adminToken', json.accessToken);"
            ]
          }
        }
      ]
    },
    {
      "name": "Admin - List users (USER should be 403)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
        "url": "{{baseUrl}}/admin/users?page=0&size=5"
      }
    },
    {
      "name": "Admin - List users (ADMIN should be 200)",
      "description": "Before this call, ensure the admin user has ADMIN role in DB (user_roles).",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }],
        "url": "{{baseUrl}}/admin/users?page=0&size=5"
      }
    },
    {
      "name": "Admin - Grant ADMIN role to user",
      "description": "Requires an ADMIN token. Use after promoting admin in DB.",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": "{{baseUrl}}/admin/users/{{userId}}/role",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"admin\": true\n}"
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "userEmail", "value": "user{{$randomUUID}}@test.com" },
    { "key": "userPassword", "value": "Password123!" },
    { "key": "userToken", "value": "" },
    { "key": "projectId", "value": "" },
    { "key": "taskId", "value": "" },
    { "key": "adminEmail", "value": "admin{{$randomUUID}}@test.com" },
    { "key": "adminPassword", "value": "Password123!" },
    { "key": "adminToken", "value": "" },
    { "key": "adminId", "value": "" },
    { "key": "userId", "value": "" }
  ]
}
